{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
     "lib": [
            "dom",
            "es2015",
            "es5",
            "es6",
            "esnext.asynciterable",
            "es2017"
        ]
  },
  "exclude": [
    "node_modules",
    "node_modules_custom",
    "LambdaFunc"
  ],
    "include": [
    "**/src/**/*.ts",
    "**/src/*.ts"
  ]
}
